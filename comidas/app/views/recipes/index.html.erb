<div class="row">

  <h1>Recipes</h1>

  <p><%= link_to 'Your Current Plans', plans_path %></p>

  <%= link_to 'all', '/recipes/?meal_type=all' %>
  <%= link_to 'breakfast', '/recipes/?meal_type=breakfast' %>
  <%= link_to 'lunch', '/recipes/?meal_type=lunch' %>
  <%= link_to 'dinner', '/recipes/?meal_type=dinner' %>

</div>

<% @recipes.each do |recipe| %>
<div id="content" class="col-xs-3">
  <h2><%= recipe.name %></h2>
    <img src="<%= recipe.image_url %>" alt="">
    <p>Calories: <%= recipe.calories %></p>
    <p><%= link_to 'add', recipe %></p>
</div>
  <% end %>

