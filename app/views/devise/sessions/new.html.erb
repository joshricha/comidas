<div id="main-container" class="container">
  <div class="row">
    <div id="content" class="col-xs-12">

      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group"><%= f.label :email, class: "col-sm-2 control-label" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail3" %></div>

        <div class="form-group"><%= f.label :password, class: "col-sm-2 control-label" %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "inputEmail3" %></div>

        <% if devise_mapping.rememberable? -%>
          <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
        <% end -%>

        <div><%= f.submit "Log in", class: "btn btn-default" %></div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
